{{# partial "content" }}
<div class="body">
	{{>part/menu}}

	<div role="main" class="main">
		<section class="page-header">
			<div class="container">
				<div class="row">
					<div class="col-md-12">
						<ul class="breadcrumb">
							<li><a href="#">Home</a></li>
							<li class="active">Blog</li>
						</ul>
					</div>
				</div>
				<div class="row">
					<div class="col-md-12">
						<h1>Full Width</h1>
					</div>
				</div>
			</div>
		</section>

		<div class="container">
			<div class="row">
				{{>part/documentForm}}
				{{>part/skills}}

				<div class="col-md-9">
					<div class="blog-posts">
						{{!document}}
						<article class="post post-large">
							<div class="post-date">
								<span class="day">{{document.day}}</span>
								<span class="month">{{document.month}}</span>
							</div>

							<div class="post-content">
								<h2><a href="blog-post.html">{{document.title}}</a></h2>

								{{!Info}}
								<div class="post-meta">
									<span><i class="fa fa-user"></i> <a href="/users/{{document.author.userId}}">{{document.author.name}}</a> </span>
									<span><i class="fa fa-tag"></i>
										{{#each skills}}
											<a href="/skills/{{skill.name}}">{{skill.name}}</a>
										{{/each}}
									</span>
									<span><i class="fa fa-folder-open"></i> <a href="#">{{document.viewerCount}}</a> </span>
									<span><i class="fa fa-bookmark"></i> <a href="#">{{document.keeperCount}}</a> </span>
									<span><i class="fa fa-facebook-official"></i> <a href="#">{{document.sharerCount}}</a> </span>
									<span><i class="fa fa-comments"></i> <a href="#">{{document.commentCount}} </a></span>
								</div>

								<p>{{{document.htmlContent}}}</p>

								{{!More}}
								<section class="panel">
									<div class="panel-body">
										{{!Share}}
										<div class="post-block post-share">
											<h3 class="heading-primary"><a href="javascript:fbShare('http://test.com')"><i class="fa fa-share"></i>Share this post</a></h3>
										</div>

										{{!Author}}
										<div class="post-block post-author clearfix">
											<h3 class="heading-primary"><i class="fa fa-user"></i>Author</h3>

											<div class="img-thumbnail">
												<a href="blog-post.html">
													<img src="{{document.author.imageUrl}}">
												</a>
											</div>
											<p><strong class="name"><a href="/users/{{document.author.userId}}">{{document.author.name}}</a></strong></p>

											<p>{{document.author.description}}</p>
										</div>

										{{!comments}}
										{{#if document.comments}}
											<div class="post-block post-comments clearfix">
												<h3 class="heading-primary"><i class="fa fa-comments"></i>Comments ({{document.commentCount}})</h3>

												<ul class="comments">
													{{#each document.comments}}
														<li>
															<div class="comment">
																<div class="img-thumbnail">
																	<img class="avatar" src="{{writer.imageUrl}}">
																</div>
																<div class="comment-block">
																	<div class="comment-arrow"></div>
																	<span class="comment-by">
																		<strong>{{writer.name}}</strong>
																	</span>
																	<p>{{{htmlContent}}}</p>
																	<span class="date pull-right">{{displayRegDate}}</span>
																</div>
															</div>
														</li>
													{{/each}}
												</ul>
											</div>
										{{/if}}

										{{!comment form}}
										<div class="post-block post-leave-comment">
											<h3 class="heading-primary">Leave a comment</h3>

											<form action="/comment/{{id}}" accept-charset="UTF-8" method="POST">
												<div class="row">
													<div class="form-group">
														<div class="col-md-12">
															<textarea data-plugin-markdown-editor rows="5" name="content"></textarea>
														</div>
													</div>
												</div>

												<div class="row">
													<div class="col-md-12">
														<input type="submit" value="Post Comment" class="btn btn-primary btn-lg mb-xlg"
															   data-loading-text="Loading...">
													</div>
												</div>
											</form>
										</div>
									</div>
								</section>
							</div>
						</article>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
{{/partial}}

{{>layout}}






